{
  "name": "posthtml-cli",
  "version": "0.3.2",
  "description": "CLI for posthtml",
  "license": "MIT",
  "repository": "posthtml/posthtml-cli",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "bin": {
    "posthtml": "lib/cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "prepush": "npm t",
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "nyc ava"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "posthtml",
    "posthtml-runner",
    "cli"
  ],
  "dependencies": {
    "globby": "^7.1.1",
    "post-load-plugins": "0.0.22",
    "posthtml": "^0.11.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-angular": "^6.1.0",
    "ava": "*",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.3.2",
    "babel-preset-minify": "^0.3.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.9",
    "coveralls": "^3.0.0",
    "cpy": "^6.0.0",
    "eslint": "^4.17.0",
    "eslint-plugin-ava": "^4.5.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-unicorn": "^3.0.1",
    "execa": "^0.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "nyc": "^11.4.1",
    "path-exists": "^3.0.0",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.3",
    "posthtml-custom-elements": "^1.1.0",
    "read-pkg": "^3.0.0",
    "tempfile": "^2.0.0"
  },
  "lint-staged": {
    "{src,test}*.js": "eslint",
    "*.md": "eslint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          },
          "useBuiltIns": true
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ]
  },
  "posthtml": {
    "customElements": {}
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "ava",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "plugin:unicorn/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "cli": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
