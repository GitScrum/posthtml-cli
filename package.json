{
  "name": "posthtml-cli",
  "version": "0.3.0",
  "description": "CLI for posthtml",
  "license": "MIT",
  "repository": "posthtml/posthtml-cli",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "bin": {
    "posthtml": "cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog\"",
    "patch": "np patch --any-branch --no-yarg",
    "minor": "np minor --any-branch --no-yarg",
    "major": "np major --any-branch --no-yarg",
    "pretest": "clinton && lint-staged",
    "test": "nyc ava"
  },
  "files": [
    "cli.js"
  ],
  "keywords": [
    "posthtml",
    "posthtml-runner",
    "cli"
  ],
  "dependencies": {
    "globby": "^6.1.0",
    "post-load-plugins": "0.0.16",
    "posthtml": "^0.9.2",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.1.1",
    "@commitlint/config-angular": "^3.1.1",
    "ava": "*",
    "babel-eslint": "^8.0.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.4",
    "coveralls": "^3.0.0",
    "cpy": "^6.0.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "execa": "^0.8.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "np": "^2.16.0",
    "nyc": "^11.0.1",
    "path-exists": "^3.0.0",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.3",
    "posthtml-custom-elements": "^1.1.0",
    "read-pkg": "^2.0.0",
    "tempfile": "^2.0.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.md": "eslint --rule indent: [error, 4] ."
  },
  "posthtml": {
    "customElements": {}
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "standard",
      "babel",
      "markdown"
    ],
    "extends": [
      "standard",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "xo": [
        "off"
      ]
    }
  }
}
