{
  "name": "posthtml-cli",
  "version": "0.3.1",
  "description": "CLI for posthtml",
  "license": "MIT",
  "repository": "posthtml/posthtml-cli",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "bin": {
    "posthtml": "cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "test": "nyc ava"
  },
  "files": [
    "cli.js"
  ],
  "keywords": [
    "posthtml",
    "posthtml-runner",
    "cli"
  ],
  "dependencies": {
    "globby": "^7.1.1",
    "post-load-plugins": "0.0.21",
    "posthtml": "^0.11.2",
    "yargs": "^10.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-angular": "^6.0.2",
    "ava": "*",
    "babel-eslint": "^8.2.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.5",
    "coveralls": "^3.0.0",
    "cpy": "^6.0.0",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "execa": "^0.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.1",
    "nyc": "^11.4.1",
    "path-exists": "^3.0.0",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.3",
    "posthtml-custom-elements": "^1.1.0",
    "read-pkg": "^3.0.0",
    "tempfile": "^2.0.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.md": "eslint --rule indent: [error, 4] ."
  },
  "posthtml": {
    "customElements": {}
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "standard",
      "babel",
      "markdown"
    ],
    "extends": [
      "standard",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "xo": [
        "off"
      ]
    }
  }
}
