{
  "name": "posthtml-cli",
  "version": "0.5.1",
  "description": "CLI for posthtml",
  "license": "MIT",
  "repository": "posthtml/posthtml-cli",
  "homepage": "https://posthtml/posthtml-cli#readme",
  "bugs": "posthtml/posthtml-cli/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "bin": {
    "posthtml": "lib/cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git add changelog.md && git commit -m \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "npm run build",
    "test": "nyc ava"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "posthtml",
    "posthtml-runner",
    "cli"
  ],
  "dependencies": {
    "cosmiconfig": "^5.2.1",
    "fast-glob": "^3.0.2",
    "make-dir": "^3.0.0",
    "meow": "^5.0.0",
    "merge-options": "^1.0.1",
    "posthtml": "^0.11.4",
    "to-camel-case": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "acorn": "^6.1.1",
    "ava": "*",
    "babel-eslint": "^10.0.2",
    "babel-preset-minify": "^0.5.0",
    "clinton": "^0.14.0",
    "conventional-changelog-cli": "^2.0.21",
    "coveralls": "^3.0.4",
    "cpy": "^7.3.0",
    "eslint": "^6.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-plugin-ava": "^7.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-unicorn": "^9.1.1",
    "execa": "^2.0.0",
    "husky": "^2.5.0",
    "is-promise": "^2.1.0",
    "lint-staged": "^8.2.1",
    "merge": "^1.2.1",
    "nyc": "^14.1.1",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.3",
    "posthtml-custom-elements": "^1.1.1",
    "read-pkg": "^5.1.1",
    "rimraf": "^2.6.3",
    "tempfile": "^3.0.0"
  },
  "readme": "posthtml/posthtml-cli/readme",
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "clinton && lint-staged",
      "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint",
    "*.md": "eslint"
  },
  "ava": {
    "files": [
      "test/test-*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ],
      [
        "minify",
        {
          "removeUndefined": false,
          "mangle": false
        }
      ]
    ]
  },
  "posthtml": {
    "plugins": {
      "posthtml-custom-elements": {}
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      ".idea/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "cli": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
